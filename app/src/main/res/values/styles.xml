<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myYellow</item>
        <item name="colorPrimaryDark">@color/myVeryDarkGreen</item>
        <item name="colorAccent">@color/myLightGreen</item>
        <item name="android:state_checked">@color/myMiddleGreen</item>
        <item name="backgroundColor">@color/myWhite</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/myYellow</item>
        <item name="android:textColorPrimary">@color/myVeryDarkGreen</item> <!--changes app name-->
        <item name="android:textColorSecondary">@color/myVeryDarkGreen</item> <!--changes icons-->
        <!--<item name="android:background">@color/myLightGreen</item> changes background close to name-->
        <item name="actionMenuTextColor">@color/myVeryDarkGreen</item>
    </style>

    <item name="menu_course_group" type="id" />
</resources>
