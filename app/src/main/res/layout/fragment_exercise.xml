<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExerciseFragment">

    <LinearLayout
        android:id="@+id/linear_layout_ef"
        android:layout_width="398dp"
        android:layout_height="420dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/exercise_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/exercise_content_title" />

        <Button
            android:id="@+id/add_solution_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/myLightBlue"
            android:text="@string/add_solution"
            android:textColor="@color/myVeryDarkBlue" />

    </LinearLayout>

    <Button
        android:id="@+id/add_image_btn"
        android:layout_width="156dp"
        android:layout_height="43dp"
        android:background="@color/myLightBlue"
        android:text="@string/add_image_gallery"
        android:textColor="@color/myVeryDarkBlue"
        app:layout_constraintBottom_toTopOf="@+id/download_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_ef"
        app:layout_constraintVertical_bias="0.704" />

    <Button
        android:id="@+id/upload_btn"
        android:layout_width="156dp"
        android:layout_height="43dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="32dp"
        android:background="@color/myLightBlue"
        android:text="@string/upload_image"
        android:textColor="@color/myVeryDarkBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/download_btn"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/download_btn"
        android:layout_width="156dp"
        android:layout_height="43dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="32dp"
        android:background="@color/myLightBlue"
        android:text="@string/download_image"
        android:textColor="@color/myVeryDarkBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>